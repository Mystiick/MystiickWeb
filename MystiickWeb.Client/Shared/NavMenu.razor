<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="oi oi-home" aria-hidden="true"></i> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="photography">
                <i class="oi oi-camera-slr"></i> Photography
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="minecraft">
                <i class="oi oi-globe"></i> Minecraft
            </NavLink>
        </div>
        @if (debug)
        {
            <div class="nav-item px-3">            
                <NavLink class="nav-link" href="/api/image/asldkfjasldfgkj">
                    Debug
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {

#if DEBUG
private bool debug = true;
#else
private bool debug = false;
#endif

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
