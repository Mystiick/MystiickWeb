@if (!string.IsNullOrEmpty(HeaderText))
{
    <h1 class="inline-block">@HeaderText</h1>
}

<LoadingSpinner IsLoading="IsLoading" />

@if (Error != string.Empty)
{
    <div class="text-danger">@Error</div>
}
@if (Message != string.Empty)
{
    <div class="text-danger">@Message</div>
}

@if (ValidationMessages.Any())
{
    <div class="border border-danger rounded p-2 pb-0 mb-2 bg-danger bg-opacity-25">
        <ul class="mb-2">
            @foreach (var msg in ValidationMessages)
            {
                <li>@msg</li>
            }
        </ul>
    </div>
}

@code {
    [Parameter] public string HeaderText { get; set; } = string.Empty;
    [Parameter] public string Error { get; set; } = string.Empty;
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public List<string> ValidationMessages { get; set; } = new();
    [Parameter] public bool IsLoading { get; set; } = false;
}
